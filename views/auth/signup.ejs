<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
            <% } %>
        <form class="login-form" action="/signup" method="POST"> 
        <input type="hidden" value="<%= csrfToken %>" name="_csrf">

            <h1>إنشاء حساب جديد</h1>
            
            <div class="form-control">
                <label for="name">اسم المستخدم</label>
                <input type="text" name="name" id="name" placeholder="أدخل اسمك" required>
            </div>

            <div class="form-control">
                <label for="email">البريد الإلكتروني</label>
                <input 
                    class="<%= validationErrors.find(e => e.path === 'email') ? 'invalid' : '' %>"
                    type="email" 
                    name="email" 
                    id="email" 
                    value="<%= oldInput.email %>">
            </div>
            
            <div class="form-control">
                <label for="password">كلمة المرور</label>
                <input 
                    class="<%= validationErrors.find(e => e.path === 'password') ? 'invalid' : '' %>"
                    type="password" 
                    name="password" 
                    id="password" 
                    value="<%= oldInput.password %>">
            </div>

            <div class="form-control">
                <label for="confirmPassword">تأكيد كلمة المرور</label>
                <input 
                    class="<%= validationErrors.find(e => e.path === 'confirmPassword') ? 'invalid' : '' %>"
                    type="password" 
                    name="confirmPassword" 
                    id="confirmPassword" 
                    value="<%= oldInput.confirmPassword %>">
            </div>
            
            <button class="btn btn-primary" type="submit">تسجيل</button>
        </form>
    </main>
    
<%- include('../includes/end.ejs') %>