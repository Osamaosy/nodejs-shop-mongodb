<%- include('../includes/head.ejs') %>
    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <div class="container">
                    <div class="form-container">
                        <form class="product-form" 
                              action="<%= editing ? '/admin/edit-product' : '/admin/add-product' %>" 
                              method="POST" 
                              enctype="multipart/form-data">
                           
                            <input type="hidden" value="<%= csrfToken %>" name="_csrf">
                            
                            <% if (editing) { %>
                                <input type="hidden" name="productId" value="<%= product._id %>">
                            <% } %>

                            <div class="form-control">
                                <label for="title">عنوان المنتج</label>
                                <input type="text" name="title" id="title" value="<%= editing || hasError ? product.title : '' %>">
                            </div>

                            <div class="form-control">
                                <label for="image">صورة المنتج</label>
                                <input type="file" name="image" id="image">
                            </div>

                            <div class="form-control">
                                <label for="price">السعر</label>
                                <input type="number" name="price" id="price" step="0.01" value="<%= editing || hasError ? product.price : '' %>">
                            </div>

                            <div class="form-control">
                                <label for="description">الوصف</label>
                                <textarea name="description" id="description" rows="5"><%= editing || hasError ? product.description : '' %></textarea>
                            </div>

                            <div class="form-actions">
                                <button type="submit" class="btn btn-primary">
                                    <%= editing ? 'حفظ التعديلات' : 'إضافة المنتج' %>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </main>
            <%- include('../includes/end.ejs') %>