<%- include('../includes/head.ejs') %>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
                <div class="container">
                    <div class="form-container">
                        <div class="form-header">
                            <h1>
                                <%= editing ? 'تعديل المنتج' : 'إضافة منتج جديد' %>
                            </h1>
                            <p>
                                <%= editing ? 'عدّل تفاصيل المنتج' : 'أدخل تفاصيل المنتج الجديد' %>
                            </p>
                        </div>

                        <form class="product-form" action="<%= editing ? '/admin/edit-product' : '/admin/add-product' %>" method="POST" enctype="">
                        
                            <input type="hidden" value="<%= csrfToken %>" name="_csrf">
                            
                            <% if (editing) { %>
                                <input type="hidden" name="productId" value="<%= product._id %>">
                            <% } %>


                            <div class="form-control">
                                <label for="title">عنوان المنتج</label>
                                <input type="text" name="title" id="title"
                                class="<%= validationErrors.find(e => e.param === 'title') ? 'invalid' : '' %>"
                                    value="<%= editing ? product.title : '' %>" placeholder="أدخل اسم المنتج"
                                    required>
                            </div>

                            <div class="form-control">
                                <label for="price">السعر</label>
                                <input type="number" name="price" id="price"
                                class="<%= validationErrors.find(e => e.param === 'price') ? 'invalid' : '' %>"
                                    value="<%= editing ? product.price : '' %>" placeholder="0.00" step="0.01"
                                    required>
                            </div>

                            <div class="form-control">
                                <label for="description">الوصف</label>
                                <textarea name="description" id="description" rows="4"
                                    class="<%= validationErrors.find(e => e.param === 'description') ? 'invalid' : '' %>"
                                    placeholder="وصف المنتج..."><%= editing ? product.description : '' %></textarea>
                            </div>

                            <!-- <div class="form-control">
                                <label for="imageUrl">رابط الصورة</label>
                                <input type="url" name="imageUrl" id="imageUrl"
                                class="<%= validationErrors.find(e => e.param === 'imageUrl') ? 'invalid' : '' %>"
                                value="<%= editing ? product.imageUrl : '' %>"
                                placeholder="https://example.com/image.jpg">
                            </div> -->
                            <div class="form-control">
                                <label for="image">الصورة</label>
                                <input type="file" name="image" id="image"
                                    value="<%= editing ? product.image : '' %>"
                                    placeholder="https://example.com/image.jpg">
                            </div>

                            
                            <div class="form-actions">
                                <button type="submit" class="btn btn-primary">
                                    <%= editing ? 'حفظ التعديلات' : 'إضافة المنتج' %>
                                </button>
                                <a href="/admin/products" class="btn btn-secondary">إلغاء</a>
                            </div>
                        </form>
                    </div>
                </div>
            </main>

            <%- include('../includes/end.ejs') %>